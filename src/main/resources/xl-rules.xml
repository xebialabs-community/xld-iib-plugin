<rules xmlns="http://www.xebialabs.com/xl-deploy/xl-rules">

    <rule name="iib.BarDeploymentPlan" scope="deployed">
        <conditions>
            <type>iib.BarFile</type>
            <operation>CREATE</operation>
            <operation>MODIFY</operation>
        </conditions>
        <planning-script-path>iib/barDeploymentPlan.py</planning-script-path>
    </rule>

    <rule name="iib.BarUnDeployment" scope="deployed">
        <conditions>
            <type>iib.BarFile</type>
            <operation>DESTROY</operation>
        </conditions>
        <planning-script-path>iib/barUnDeploymentPlan.py</planning-script-path>
    </rule>

</rules>
